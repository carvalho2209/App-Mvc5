@using AAC.AppMvc.Extensions
@model AAC.AppMvc.ViewModels.ProviderViewModel

@{
    ViewBag.Title = "Details";
}

<h1>@ViewBag.Title</h1>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @this.FormatDocument(Model.TypeProvider, Model.Document)
        </dt>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("Edit", "Providers", new {id = Model.Id})" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index", "Providers")" class="btn btn-info">Return</a>
</div>

@Html.Partial("_AddressDetails")