@using AAC.AppMvc.Extensions
@model AAC.AppMvc.ViewModels.ProviderViewModel

<div style="padding-top: 50px">
    <div>
        <hr />
        <h3>Address</h3>
    </div>

    @if (Model != null)
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.HouseNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.Street)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.AptNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address.PostalCode)
                    </th>
                </tr>
            </thead>

            <tr>
                <td>
                    @Html.DisplayFor(model => model.Address.HouseNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address.Street)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address.AptNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address.City)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address.State)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address.PostalCode)
                </td>
                <td>
                    @if (this.ShowInUrl(Model.Id))
                    {
                        <a class="btn btn-info" href="@Url.Action("UpdateAddress", "Providers", new { id = Model.Id })" data-modal=""><spam class="glyphicon glyphicon-pencil"></spam> </a>
                    }
                </td>
            </tr>
        </table>
    }

</div>

<script>
    SetModal();
</script>